{
  "name": "<%= appName %>",
  "version": "1.0.0",
  "main": "server/server.js",
  "scripts": {
    "lint": "eslint .",
    "test:backend": "NODE_ENV=test istanbul cover mocha -- tests/**/*.js -R spec",
    "test:frontend": "cd client && npm test",
    "test": "npm run test:backend && npm run test:frontend",
    "build:client": "cd client && npm run build",
    "migrate:create": "db-migrate create --sql-file",
    "migrate:down": "db-migrate down -e $NODE_ENV",
    "migrate:up": "db-migrate up -e $NODE_ENV",
    "posttest": "npm run lint && nsp check",
    "start": "node .",
    "start:prod": "NODE_ENV=production pm2 kill && pm2 startOrRestart pm2.yml",
    "stop": "pm2 kill",
    "postinstall": "if test ./client; then cd client && yarn; fi"
  },
  "dependencies": {
    "compression": "^1.0.3",
    "cors": "^2.8.1",
    "db-migrate": "^0.10.0-beta.20",
    "db-migrate-pg": "^0.1.11",
    "helmet": "^3.1.0",
    "jsonwebtoken": "^7.2.1",
    "loopback": "^3.0.0",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^4.0.0",
    "loopback-connector-postgresql": "^2.7.0",
    "loopback-datasource-juggler": "^2.53.0",
    "loopback-ds-timestamp-mixin": "3.4.0",
    "pg": "^6.1.0",
    "pm2": "^2.4.2",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^1.0.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^2.13.1",
    "eslint-config-loopback": "^4.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nsp": "^2.1.0",
    "shipit-cli": "^3.0.0",
    "shipit-deploy": "^2.5.1",
    "sinon": "^2.0.0",
    "sinon-chai": "^2.8.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "UNLICENSED",
  "description": "<%= appName %>"
}
